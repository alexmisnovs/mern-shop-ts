{
  "name": "mern-shop-ts",
  "author": "Aleksandrs Misnovs",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "test": "cross-env NODE_ENV=test vitest --globals ./__tests__",
    "jtest": "cross-env NODE_ENV=test jest --coverage --forceExit --detectOpenHandles --no-cache --watchAll --maxWorkers=1 ./__tests__",
    "build": "concurrently \"rimraf backend-ts/dist\" \"npx tsc\" ",
    "prestart": "npm run build",
    "start": "node backend-ts/dist/server.js",
    "lint": "npx eslint . --ext .ts",
    "preserve": "concurrently \"npm run lint\" \"npm run build\" ",
    "serve": "concurrently \"npx tsc -w\" \"nodemon backend-ts/server.ts\" ",
    "client": "npm start --prefix frontend-ts",
    "dev": "concurrently \"npm run serve\" \"npm run client\" ",
    "seed:import": "npx node-ts backend-ts/seeder.ts",
    "seed:destroy": "npx node-ts backend-ts/seeder.ts -d"
  },
  "dependencies": {
    "bcryptjs": "^2.4.3",
    "colors": "^1.4.0",
    "concurrently": "^8.2.0",
    "cross-env": "^7.0.3",
    "dotenv": "^16.3.1",
    "envalid": "^7.3.1",
    "express": "^4.18.2",
    "mongodb-memory-server": "^8.13.0",
    "mongoose": "^7.3.1"
  },
  "devDependencies": {
    "@types/bcryptjs": "^2.4.2",
    "@types/colors": "^1.2.1",
    "@types/express": "^4.17.17",
    "@types/jest": "^29.5.2",
    "@types/mongoose": "^5.11.97",
    "@types/node": "^20.3.2",
    "@types/supertest": "^2.0.12",
    "@typescript-eslint/eslint-plugin": "^5.60.1",
    "@typescript-eslint/parser": "^5.60.1",
    "eslint": "^8.44.0",
    "jest": "^29.5.0",
    "nodemon": "^2.0.22",
    "rimraf": "^5.0.1",
    "supertest": "^6.3.3",
    "ts-jest": "^29.1.0",
    "ts-node": "^10.9.1",
    "typescript": "^5.1.5",
    "vitest": "^0.32.2"
  }
}
