{
  "name": "mern-shop-ts",
  "author": "Aleksandrs Misnovs",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "test": "jest --coverage --runInBand",
    "build": "concurrently \"rimraf backend\" \"npx tsc\" ",
    "prestart": "npm run build",
    "start": "node backend/server.js",
    "preserve": "npm run build",
    "serve": "concurrently \"npx tsc -w\" \"nodemon backend/server.js\" ",
    "client": "npm start --prefix frontend-ts",
    "dev": "concurrently \"npm run serve\" \"npm run client\" "
  },
  "dependencies": {
    "concurrently": "^8.2.0",
    "dotenv": "^16.3.1",
    "express": "^4.18.2"
  },
  "devDependencies": {
    "@types/express": "^4.17.17",
    "@types/jest": "^29.5.2",
    "@types/node": "^20.3.2",
    "@types/supertest": "^2.0.12",
    "jest": "^29.5.0",
    "nodemon": "^2.0.22",
    "rimraf": "^5.0.1",
    "supertest": "^6.3.3",
    "ts-jest": "^29.1.0",
    "ts-node": "^10.9.1",
    "typescript": "^5.1.5"
  }
}
